# Maintainer: Your Name <your.email@example.com>
pkgname=nautilus-extensions-clipboard2file
pkgver=1
pkgrel=1
pkgdesc="A Nautilus extension to save clipboard content to a file"
arch=('any')
url="https://git.parchlinux.com/misano/nautilus-extensions/raw/branch/main/paste2file/clipboard2file.py"
license=('GPL')
depends=('nautilus-python' 'python')
source=('clipboard2file.py::https://git.parchlinux.com/misano/nautilus-extensions/raw/branch/main/paste2file/clipboard2file.py')
sha256sums=('SKIP')

package() {
  # Ensure the target directory exists
  install -d "$pkgdir/usr/share/nautilus-python/extensions"

  # Place the script in the target directory
  install -m644 clipboard2file.py "$pkgdir/usr/share/nautilus-python/extensions/clipboard2file.py"
}
